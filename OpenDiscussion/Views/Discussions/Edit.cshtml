@model OpenDiscussion.Models.Discussion

<br />
<div>
    <a class="id-buton-outline btn" href="/Discussions/Index/@Model.TopicId">List Discussion</a>
</div>
<br />
<br />

<h2 class="mt-5">Edit Discussion</h2>
<br/>
<form method="post" action="/Discussions/Edit/@Model.DiscussionId">
    @Html.Label("Title", "Title Discussion")
    <br />
    @Html.ValidationMessage("Title", null, new {@class="text-danger"})
    @Html.Editor("Title")
    <br /><br />
    @Html.Label("Content", "Content Discussion")
    <br />
    @Html.ValidationMessage("Content", null, new {@class="text-danger"})
    @Html.Editor("Content")
    <br />
    <br/>
    <button class="id-buton-outline btn" type="submit">Edit</button>
</form>