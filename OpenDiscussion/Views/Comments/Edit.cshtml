@model OpenDiscussion.Models.Comment

<h2 class="text-center mt-5">Edit comment</h2>

<br />
<div>
    <a class="id-buton-outline btn" href="/Discussions/Show/@Model.DiscussionId">Back</a>
</div>
<br />
<br />

<form method="post" action="/Comments/Edit/@Model.CommentId">
    @Html.Label("Content", "Comment Content")
    <br />
    <br />
    @Html.ValidationMessage("Content", null, new {@class="text-danger"})

    @Html.Editor("Content")
    <br />

    <br/>
    <br />
    <button class="id-buton-outline btn" type="submit">Edit</button>

</form>
